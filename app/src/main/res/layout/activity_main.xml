<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/niEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NI" />

    <EditText
        android:id="@+id/numeroDoNoteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número do Note" />

    <!-- Considerando que a localização pode ser apenas "carrinho 1" ou "carrinho 2",
         podemos usar um Spinner ou um RadioGroup aqui. Exemplo com Spinner: -->
    <Spinner
        android:id="@+id/localizacaoSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/enviarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:layout_gravity="center_horizontal" />
</LinearLayout>